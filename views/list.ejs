<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog List</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <h1>Blog List</h1>
    <ul>
      <% blogPosts.forEach(post => { %>
      <li>
        <a class="fw-bold " href="/posts/<%= post.id %>"><%= post.title %></a>
        <a href="/posts/<%= post.id %>/edit"><button>Edit</button></a>
        <a href="/posts/<%= post.id %>/delete"><button>Delete</button></a>
        <!-- Add a Delete button -->
      </li>
      <% }); %>
    </ul>




   <!-- bootstrap  -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-hV+kIeGR8tJOdVIqDjBngb49/j1K8LJZOZUJcI9pjJ1uoGpFVk5YbL8Yfo0I++pD" crossorigin="anonymous"></script>
</body>
</html>
