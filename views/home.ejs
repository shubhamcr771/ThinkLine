<!DOCTYPE html>
<html>
<head>
    <title>My Blog</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <h1>Welcome to My Blog</h1>
    <a href="/create"><button>Create New Post</button></a> <!-- Add a button to create a new post -->
    <ul>
        <% blogPosts.forEach(post => { %>
            <li>
                <a href="/posts/<%= post.id %>"><%= post.title %></a>
                <a href="/posts/<%= post.id %>/edit"><button>Edit</button></a>
                <a href="/posts/<%= post.id %>/delete"><button>Delete</button></a> <!-- Add a Delete button -->
            </li>
        <% }); %>
    </ul>
    
</body>
</html>
